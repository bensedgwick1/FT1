    <script>
        // Initialize feather icons
        feather.replace();
        
        // unemployment data from Jan 2024 to Aug 2025
        const unemploymentData = [
            { month: 'Jan 2024', rate: 4.4, change: 0.2 },
            { month: 'Feb 2024', rate: 4.5, change: 0.1 },
            { month: 'Mar 2024', rate: 4.3, change: -0.2 },
            { month: 'Apr 2024', rate: 4.2, change: -0.1 },
            { month: 'May 2024', rate: 4.0, change: -0.2 },
            { month: 'Jun 2024', rate: 4.1, change: 0.1 },
            { month: 'Jul 2024', rate: 4.1, change: 0.0 },
            { month: 'Aug 2024', rate: 4.2, change: 0.1 },
            { month: 'Sep 2024', rate: 4.0, change: -0.2 },
            { month: 'Oct 2024', rate: 4.1, change: 0.1 },
            { month: 'Nov 2024', rate: 4.0, change: -0.1 },
            { month: 'Dec 2024', rate: 3.9, change: -0.1 },
            { month: 'Jan 2025', rate: 4.0, change: 0.1 },
            { month: 'Feb 2025', rate: 4.1, change: 0.1 },
            { month: 'Mar 2025', rate: 4.0, change: -0.1 },
            { month: 'Apr 2025', rate: 4.1, change: 0.1 },
            { month: 'May 2025', rate: 4.2, change: 0.1 },
            { month: 'Jun 2025', rate: 4.1, change: -0.1 },
            { month: 'Jul 2025', rate: 4.2, change: 0.1 },
            { month: 'Aug 2025', rate: 4.3, change: 0.1 }
        ];

        // Populate data table
        const dataTable = document.getElementById('dataTable');
        unemploymentData.forEach(item => {
            const row = document.createElement('tr');
            const changeFormatted = item.change.toFixed(1);
            row.innerHTML = `
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${item.month}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${item.rate.toFixed(1)}%</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm ${item.change > 0 ? 'text-red-500' : (item.change < 0 ? 'text-green-500' : 'text-gray-500')}">
                    ${item.change > 0 ? '+' : ''}${changeFormatted}%
                </td>
            `;
            dataTable.appendChild(row);
        });

        // Chart setup
        const ctx = document.getElementById('unemploymentChart').getContext('2d');
        const tooltip = document.getElementById('chartTooltip');
        
        let chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: unemploymentData.map(item => item.month),
                datasets: [{
                    label: 'Unemployment Rate (%)',
                    data: unemploymentData.map(item => item.rate),
                    backgroundColor: 'rgba(37, 99, 235, 0.1)',
                    borderColor: 'rgba(37, 99, 235, 1)',
                    borderWidth: 3,
                    pointBackgroundColor: 'rgba(37, 99, 235, 1)',
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        enabled: false,
                        external: function(context) {
                            if (context.tooltip.opacity === 0) {
                                tooltip.style.opacity = 0;
                                return;
                            }
                            
                            const dataIndex = context.tooltip.dataPoints[0].dataIndex;
                            const month = unemploymentData[dataIndex].month;
                            const rate = unemploymentData[dataIndex].rate.toFixed(1);
                            const change = unemploymentData[dataIndex].change.toFixed(1);
                            
                            tooltip.innerHTML = `
                                <div class="font-bold">${month}</div>
                                <div>Rate: ${rate}%</div>
                                <div class="${change > 0 ? 'text-red-400' : (change < 0 ? 'text-green-400' : 'text-gray-300')}">
                                    Change: ${change > 0 ? '+' : ''}${change}%
                                </div>
                            `;
                            
                            tooltip.style.left = context.tooltip.caretX + 'px';
                            tooltip.style.top = context.tooltip.caretY + 'px';
                            tooltip.style.opacity = 1;
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        ticks: {
                            callback: function(value) {
                                return value.toFixed(1) + '%';
                            }
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });

        // Chart type toggle
        const lineBtn = document.getElementById('lineChartBtn');
        const barBtn = document.getElementById('barChartBtn');
        const switchChartType = (newType) => {
            const currentData = chart.data;
            const currentOptions = chart.options;
            chart.destroy();
            chart = new Chart(ctx, {
                type: newType,
                data: currentData,
                options: currentOptions
            });

            if (newType === 'line') {
                lineBtn.classList.add('bg-blue-600', 'text-white');
                lineBtn.classList.remove('bg-gray-200', 'text-gray-700');
                barBtn.classList.add('bg-gray-200', 'text-gray-700');
                barBtn.classList.remove('bg-blue-600', 'text-white');
            } else {
                barBtn.classList.add('bg-blue-600', 'text-white');
                barBtn.classList.remove('bg-gray-200', 'text-gray-700');
                lineBtn.classList.add('bg-gray-200', 'text-gray-700');
                lineBtn.classList.remove('bg-blue-600', 'text-white');
            }
        };

        lineBtn.addEventListener('click', () => switchChartType('line'));
        barBtn.addEventListener('click', () => switchChartType('bar'));
    </script>
</body>
